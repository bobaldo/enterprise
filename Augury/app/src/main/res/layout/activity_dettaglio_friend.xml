<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_detail"
    tools:context="augury.it.augury.dettaglioFriend">

    <ImageView
        android:layout_marginLeft="150dp"
        android:id="@+id/immagineFriend"
        android:background="#000"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <TextView
        android:gravity="center"
        android:layout_marginTop="30dp"
        style="@style/labelNome"
        android:layout_below="@id/immagineFriend"
        android:id="@+id/nomeRisultato"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="placeholder" />

    <TextView
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_below="@id/nomeRisultato"
        android:id="@+id/cognomeRisultato"
        android:textSize="60dp"
        style="@style/labelCognome"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="placeholder" />

</RelativeLayout>